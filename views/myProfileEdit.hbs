  <body>
    <div class="container">
      <main>
        <h1>Edit Profile</h1>
        <div class="form">
          <form
            action="/myProfile/edit"
            method="POST"
            enctype="multipart/form-data"
          >

            <label for="emailAddress">Email Address:</label>
            <input type="text" id="emailAddress" name="emailAddress" value="{{user.emailAddress}}" />
            <p></p>

            <label for="profilePic">Profile Picture:</label>
            <input type="file" id="profilePic" name="profilePic" accept="*image/*" value="/images/{{user.profilePic}}" />
            <p></p>

            <label for="age">Age:</label>
            <input type="number" id="age" name="age" value="{{user.age}}" />
            <p></p>

            <label for="location">Location:</label>
            <input type="text" id="location" name="location" value="{{user.location}}"/>
            <p></p>

            <label for="bio">Bio:</label>
            <textarea id="bio" name="bio">{{user.bio}}</textarea>
            <p></p>

            <input type="submit" value="Update Profile" />
          </form>
        </div>
      </main>
    </div>

  </body>